                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0" Height="30">
                                            <Button Name="deleteMatchButton" Width="25" Height="25" Background="Transparent" BorderBrush="Transparent" Click="deleteMatchButton_Click" >
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=scoutsHeader, Path=Visibility}" Value="Collapsed">
