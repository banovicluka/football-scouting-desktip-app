                                                <Style TargetType="ListViewItem">
                                                    <Setter Property="Background" Value="Transparent"></Setter>
                                                </Style>
                                            </ListView.ItemContainerStyle>
                                    </ListView>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>

                </DataGrid>
