                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="DarkBlue"  Width="auto" BorderThickness="0,0,2,0">
                                    <StackPanel Orientation="Vertical" Width="auto">
                                        <Label FontWeight="Bold" FontStyle="Italic" Content="{x:Static language:Language1.mentality_description}"></Label>
                                        <TextBlock Text="{Binding mentalityDescription}" Width="170"  TextWrapping="Wrap" Margin="3"></TextBlock>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Black" Width="auto">
                                    <StackPanel Orientation="Vertical" Width="auto">
                                        <Label FontWeight="Bold" FontStyle="Italic" Content="{x:Static language:Language1.conclusion}"></Label>
                                        <TextBlock Text="{Binding conclusion}" Width="150"  TextWrapping="Wrap"></TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>
                </DataGrid>
            </TabItem>
            <TabItem Name="makeReviewHeader"  Height="50" Width="120">
                <TabItem.Header>
                    <TextBlock Background="Transparent" Foreground="Black" FontWeight="Bold" Text="{x:Static language:Language1.make_review}"></TextBlock>
                </TabItem.Header>
                <StackPanel Orientation="Vertical" Margin="10">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Label FontWeight="Bold" Foreground="White" Margin="0,20,0,20" Content="{x:Static language:Language1.name}"></Label>
                        <TextBox Name="playerNameBox" Width="80" Margin="2,20,20,20"></TextBox>
                        <Label  FontWeight="Bold" Foreground="White" Margin="0,20,0,20" Content="{x:Static language:Language1.surname}"></Label>
                        <TextBox Name="playerSurnameBox" Width="80" Margin="2,20,20,20"></TextBox>
                        <Label FontWeight="Bold" Foreground="White" Margin="0,20,0,20" Content="{x:Static language:Language1.age}"></Label>
                        <TextBox Name="playerAgeBox" Width="80" Margin="2,20,20,20"></TextBox>
                        <Label FontWeight="Bold" Foreground="White" Margin="0,20,0,20" Content="{x:Static language:Language1.nationality}"></Label>
                        <TextBox Name="playerNationalityBox" Width="80" Margin="2,20,20,20"></TextBox>
                        <Label FontWeight="Bold" Foreground="White" Margin="0,20,0,20" Content="{x:Static language:Language1.foot}"></Label>
                        <TextBox Name="playerFootBox" Width="80" Margin="2,20,20,20"></TextBox>
                        <Label FontWeight="Bold" Foreground="White" Margin="0,20,0,20" Content="{x:Static language:Language1.team}"></Label>
                        <ComboBox Name="teamsBox" Margin="0,20,0,20" Width="80"></ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <Label FontWeight="Bold" Foreground="White" Content="{x:Static language:Language1.technique_description}"></Label>
                            <TextBox Name="techniqueDescriptionBox" Width="300" Height="100" Margin="0,0,20,0"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <Label FontWeight="Bold" Foreground="White" Content="{x:Static language:Language1.tactics_description}"></Label>
                            <TextBox Name="tacticsDescriptionBox" Width="300" Height="100" Margin="0,0,20,0"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="80,0,0,0">
                            <Label FontWeight="Bold" Foreground="White" Content="{x:Static language:Language1.technique_grade}"></Label>
                            <ComboBox Name="techniqueGrades" Margin="0,0,0,20">
                            </ComboBox>
                            <Label FontWeight="Bold" Foreground="White" Content="{x:Static language:Language1.tactics_grade}"></Label>
                            <ComboBox Name="tacticsGrades" Margin="0,0,0,20"></ComboBox>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <Label FontWeight="Bold" Foreground="White" Content="{x:Static language:Language1.physique_description}"></Label>
                            <TextBox Name="physicsDescriptionBox" Width="300" Height="100" Margin="0,0,20,0"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <Label FontWeight="Bold" Foreground="White" Content="{x:Static language:Language1.mentality_description}"></Label>
                            <TextBox Name="mentalityDescriptionBox" Width="300" Height="100" Margin="0,0,20,0"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="80,0,0,0">
                            <Label FontWeight="Bold" Foreground="White" Content="{x:Static language:Language1.physique_grade}"></Label>
                            <ComboBox Name="physicsGrades" Margin="0,0,0,20">
                            </ComboBox>
                            <Label FontWeight="Bold" Foreground="White" Content="{x:Static language:Language1.mentality_grade}"></Label>
                            <ComboBox Name="mentalityGrades" Margin="0,0,0,20"></ComboBox>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" >
                        <StackPanel Orientation="Vertical" Margin="160,0,0,0">
                            <Label FontWeight="Bold" Foreground="White" Content="{x:Static language:Language1.conclusion}"></Label>
                            <TextBox Name="conclusionBox" Width="300" Height="100" Margin="0,0,0,0"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="5">
                            <Button Name="addReviewButton" Margin="30,10,0,5" Width="100" Height="20" Click="addReviewButton_Click"  Content="{x:Static language:Language1.complete_review}"></Button>
                            <TextBlock Name="infoLabel3" TextWrapping="Wrap" Width="200"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="65,0,0,0">
                            <Label Content="{x:Static language:Language1.finaly_grade}" FontWeight="Bold" Foreground="White"/>
                            <ComboBox x:Name="finalGrades" Margin="0,0,0,0"/>
                        </StackPanel>
                        
                    </StackPanel>
                    
                </StackPanel>
            </TabItem>
        </TabControl>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,10,50,15" HorizontalAlignment="Right">
            
            <StackPanel Orientation="Vertical">
                <RadioButton x:Name="Theme1" GroupName="modesSelection" Content="{x:Static language:Language1.theme1}" Margin="0,0,0,5" HorizontalAlignment="Center" Checked="Theme1_Checked" ></RadioButton>
                <RadioButton x:Name="Theme2" GroupName="modesSelection" Content="{x:Static language:Language1.theme2}" Margin="0,0,0,5" HorizontalAlignment="Center" Checked="Theme2_Checked"></RadioButton>
                <RadioButton x:Name="Theme3" GroupName="modesSelection" Content="{x:Static language:Language1.theme3}" HorizontalAlignment="Center" Checked="Theme3_Checked"></RadioButton>

            </StackPanel>
            <Button x:Name="logoutButton" Width="70" Height="30" Click="logoutButton_Click" Margin="40,0,0,0" Content="{x:Static language:Language1.logout}"></Button>
        </StackPanel>
    </Grid>
</Window>
